<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioActivity"
    android:background="@color/color_black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/designer"
            android:text="INICIO"
            android:textColor="@color/color_yellow"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/tvsaludoNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/designer"
            android:textColor="@color/color_yellow"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnMiPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/btn_color"
            android:text="Mi Perfil"
            android:textColor="@color/color_black" />

            <Button
                android:id="@+id/btnEntrena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/btn_color"
                android:layout_marginTop="25dp"
                android:text="Entrenamientos"
                android:textColor="@color/color_black" />

            <Button
                android:id="@+id/btnTurno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/btn_color"
                android:layout_marginTop="25dp"
                android:text="Turnos"
                android:textColor="@color/color_black" />

            <Button
                android:id="@+id/btnHistorialTurnos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/btn_color"
                android:layout_marginTop="25dp"
                android:text="Historial de turnos"
                android:textColor="@color/color_black" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>