<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".views.EntrenaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:textAlignment="textEnd"
        app:title="ENTRENAMIENTOS"
        app:titleTextColor="@color/white"
        android:textStyle="bold"
        android:gravity="end"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ivAbdominales"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/black"
                android:scaleType="fitCenter"
                android:src="@drawable/abdominales" />

            <TextView
                android:id="@+id/tvAbdominales"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ABDOMINALES"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:padding="5dp"
                android:textStyle="italic"
                android:background="@color/black"/>

            <ImageView
                android:id="@+id/ivBrazos"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/black"
                android:scaleType="fitCenter"
                android:src="@drawable/brazos" />

            <TextView
                android:id="@+id/tvBrazos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="BRAZOS"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:padding="5dp"
                android:textStyle="italic"
                android:background="@color/black"/>



        </LinearLayout>




    </ScrollView>
</LinearLayout>

